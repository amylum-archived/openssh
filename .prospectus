item do
  expected do
    github_tag
    repo 'openssh/openssh-portable'
    regex /^V_(\d+)_(\d+)_P(\d+)$/, '\1.\2p\3'
  end

  actual do
    git_tag
    regex /^(.*)-\d+$/
  end

  deps do
    %w(zlib openssl).each do |dep|
      item do
        name dep

        expected do
          github_release
          repo "amylum/#{dep}"
        end

        actual do
          grep
          file 'Makefile'
          regex /^#{dep.upcase}_VERSION = ([\w.-]+)$/
        end
      end
    end
  end
end
