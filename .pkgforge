name 'openssh'
org 'amylum'

licenses 'LICENCE'

deps(
  zlib: '1.2.8-4',
  openssl: '1.0.2j-1'
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  libexecdir: '/usr/lib/ssh',
  'with-pid-dir': '/run',
  'with-privsep-user': 'nobody',
  'with-zlib': "#{dep('zlib')}/usr",
  'with-ssl-dir': "#{dep('openssl')}/usr"
)

harden

patch 'ssl_dir.patch'

build do
  run 'autoheader'
  run 'autoconf'
  configure
  make
  install
end

test do
  run 'ssh -V'
  run 'ssh-keygen -f /tmp/fakekey -N ""'
end
