name 'openssh'
org 'amylum'

licenses 'LICENCE'

deps(
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  openssl: {
    version: '1.1.0h-1',
    checksum: 'c05e026a0e376cc4f5bb1dc1718fab436152e4cc35f02a378a8b85a28764572a'
  },
  libseccomp: {
    version: '2.3.3-2',
    checksum: '131a07dd751bfa73eeb4bb5471e0257f60b8341b06be845545b5689e6415d9ab'
  },
  'linux-api-headers': {
    version: '4.15-2',
    checksum: 'dbfe68e7620b09fe2996d83fe4ae738dddb2486885b9d5ef3dc27ae77d7585ba'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  libexecdir: '/usr/lib/ssh',
  'with-pid-dir': '/run',
  'with-privsep-user': 'nobody',
  'with-zlib': "#{dep('zlib')}/usr",
  'with-ssl-dir': "#{dep('openssl')}/usr",
  'with-sandbox': 'seccomp_filter',
  'without-openssl-header-check': nil,
  build: 'x86_64-pc-linux-gnu',
  host: 'x86_64-unknown-linux-gnu'
)
remove_linker_archives
remove_pkgconfig_files

cflags
harden

patch 'ssl_dir.patch'
patch 'openssl-1.1.0.patch'

build do
  run 'autoheader'
  run 'autoconf'
  configure
  make
  install
end

test do
  run 'ssh -V'
  File.unlink('/tmp/fakekey') if File.exist? '/tmp/fakekey'
  run 'ssh-keygen -f /tmp/fakekey -N ""'
end
