name 'openssh'
org 'amylum'

licenses 'LICENCE'

deps(
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  openssl: {
    version: '1.0.2m-1',
    checksum: '263c64d3c4cde7f0f695a08453738842ceb6f2273882123e10ba4bbad619f9e0'
  },
  libseccomp: {
    version: '2.3.2-6',
    checksum: 'acb8ee342c58bb98e211f7ec418bce86a1d415260559116ae9a6300e6bf8f3d9'
  },
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  libexecdir: '/usr/lib/ssh',
  'with-pid-dir': '/run',
  'with-privsep-user': 'nobody',
  'with-zlib': "#{dep('zlib')}/usr",
  'with-ssl-dir': "#{dep('openssl')}/usr",
  'with-sandbox': 'seccomp_filter'
)

cflags
harden

patch 'ssl_dir.patch'

build do
  run 'autoheader'
  run 'autoconf'
  configure
  make
  install
end

test do
  run 'ssh -V'
  File.unlink('/tmp/fakekey') if File.exist? '/tmp/fakekey'
  run 'ssh-keygen -f /tmp/fakekey -N ""'
end
