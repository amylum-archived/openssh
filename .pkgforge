name 'openssh'
org 'amylum'

licenses 'LICENCE'

deps(
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  openssl: {
    version: '1.1.0h-2',
    checksum: 'c56e167c5836f9445472b723b5f7b15f3eff19e0d312b4046852605b0706b7c7'
  },
  libseccomp: {
    version: '2.3.3-3',
    checksum: '6e443261eba7b4ef7f85c77996d8d6f895a30eb65178d7a157d612afb74ba8c4'
  },
  'linux-api-headers': {
    version: '4.16-1',
    checksum: '55af258de8663de5ec97db875651eaeecc209b47454dbbf27757d4de595e618d'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  libexecdir: '/usr/lib/ssh',
  'with-pid-dir': '/run',
  'with-privsep-user': 'nobody',
  'with-zlib': "#{dep('zlib')}/usr",
  'with-ssl-dir': "#{dep('openssl')}/usr",
  'with-sandbox': 'seccomp_filter',
  'without-openssl-header-check': nil,
  build: 'x86_64-pc-linux-gnu',
  host: 'x86_64-unknown-linux-gnu'
)
remove_linker_archives
remove_pkgconfig_files

cflags
harden

patch 'ssl_dir.patch'
patch 'openssl-1.1.0.patch'

build do
  run 'autoheader'
  run 'autoconf'
  configure
  make
  install
end

test do
  run 'ssh -V'
  File.unlink('/tmp/fakekey') if File.exist? '/tmp/fakekey'
  run 'ssh-keygen -f /tmp/fakekey -N ""'
end
