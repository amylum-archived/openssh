name 'openssh'
org 'amylum'

licenses 'LICENCE'

deps(
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  openssl: {
    version: '1.1.0h-3',
    checksum: 'c9d6db39ea09dd8051cb36c42f85eb8043ce580c6132caa0506a839d88dea275'
  },
  libseccomp: {
    version: '2.3.3-4',
    checksum: '4cfe1658757993f588e0310ea7d68d5db8756e5ec93adc5502b6455e708d22b9'
  },
  'linux-api-headers': {
    version: '4.17-1',
    checksum: 'b2526797b346c73dc44da02dc16def8eb2059c02bd015f76497e9babadc1a44f'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  libexecdir: '/usr/lib/ssh',
  'with-pid-dir': '/run',
  'with-privsep-user': 'nobody',
  'with-zlib': "#{dep('zlib')}/usr",
  'with-ssl-dir': "#{dep('openssl')}/usr",
  'with-sandbox': 'seccomp_filter',
  'without-openssl-header-check': nil,
  build: 'x86_64-pc-linux-gnu',
  host: 'x86_64-unknown-linux-gnu'
)
remove_linker_archives
remove_pkgconfig_files

cflags
harden

patch 'openssl-1.1.patch'

build do
  run 'autoheader'
  run 'autoconf'
  configure
  make
  install
end

test do
  run 'ssh -V'
  File.unlink('/tmp/fakekey') if File.exist? '/tmp/fakekey'
  run 'ssh-keygen -f /tmp/fakekey -N ""'
end
