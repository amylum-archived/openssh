name 'openssh'
org 'amylum'

licenses 'LICENCE'

deps(
  zlib: {
    version: '1.2.11-6',
    checksum: '7da7212123edac6d5d5dc2db8fb10a6af06472578840c51e489e1f391b66c208'
  },
  openssl: {
    version: '1.1.0i-3',
    checksum: '12cf164859e31f433bfe8ae1533e700cd98dc90f0138e7af202d77db9ad83996'
  },
  libseccomp: {
    version: '2.3.3-7',
    checksum: '7d4152c1350a68f714b3a79413f806e30c072f91e877b6343370cbe4ff7e8774'
  },
  'linux-api-headers': {
    version: '4.20-1',
    checksum: 'aed037b2b3fb2df77ca19359a20188d39c25d011febf4d3733d251fa87ca9636'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc/ssh',
  libexecdir: '/usr/lib/ssh',
  'with-pid-dir': '/run',
  'with-privsep-user': 'nobody',
  'with-zlib': "#{dep('zlib')}/usr",
  'with-ssl-dir': "#{dep('openssl')}/usr",
  'with-sandbox': 'seccomp_filter',
  'without-openssl-header-check': nil,
  build: 'x86_64-pc-linux-gnu',
  host: 'x86_64-unknown-linux-gnu'
)
remove_linker_archives
remove_pkgconfig_files

cflags
harden

#patch 'openssl-1.1.patch'

build do
  run 'autoheader'
  run 'autoconf'
  configure
  make
  install
end

test do
  run 'ssh -V'
  File.unlink('/tmp/fakekey') if File.exist? '/tmp/fakekey'
  run 'ssh-keygen -f /tmp/fakekey -N ""'
end
